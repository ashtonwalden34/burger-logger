{{!-- {{Set up to have template for handlebars to render}} --}}

{{!-- {{Set up button to submit data to databse}} --}}

<h1>Burger Logger</h1>


<h2>Burgers that have not been devoured</h2>
{{!-- {{Finds all entries in burgers table and adds to them to this list if they have not been devoured}} --}}
<ul>
    {{#each burgers}}
        {{#unless devoured}}
            {{> burgers/burger-block devoured=true}}
        {{/unless}}
    {{/each}}
</ul>

<h2>Burgers that have been devoured</h2>
{{!-- {{Finds all entries in burgers table and adds to them to this list if they have been devoured}} --}}
<ul>
    {{#each burgers}}
        {{#if devoured}}
            {{> burgers/burger-block devoured=false}}
        {{/if}}
    {{/each}}
</ul>


<h2>Add a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burger-name">Burger:</label>
    <input type="text" id="burger-name" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> Devoured<br>
    <input type="radio" name="devoured" value="0"> Not devoured
  </div>

  <button type="submit">Add Burger</button>
</form>
