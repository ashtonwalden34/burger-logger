{{!-- {{Set up to have template for handlebars to render}} --}}

{{!-- {{Set up button to submit data to databse}} --}}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="../public/assets/css/style.css">
</head>


<body>

  <style>
    body {
      background-color: lightblue;
    }

    #wrapper {
      border: solid green 3px;
      text-align: center;
    }

    #bt {
      color: blue;
      display: inline-block;
      border: solid black 1px;
      margin-left: auto;
      margin-right: auto;
    }

    #bi {
      color: blue;
    }

    .devouredList {
      border: solid lightcoral 5px;
    }

    .notDevouredList {
      border: solid blue 1px;
    }

    #burger {
      color: blue;
      background-color: red;
    }

  </style>

<div id="wrapper">

<h1 id="bt">Burger Logger</h1>

<br>

<h2 id="bi">Add a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burger-name">Burger:</label>
    <input type="text" id="burger-name" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> Devoured<br>
    <input type="radio" name="devoured" value="0"> Not devoured
  </div>

  <button type="submit">Add Burger</button>
</form>

<br>
<br>

<div class="container">
  <div class="row">
    <div class="col">
      <h2>Not Devoured</h2>
      {{!-- {{Finds all entries in burgers table and adds to them to this list if they have not been devoured}} --}}
      <ul class="devouredList">
          {{#each burgers}}
              {{#unless devoured}}
                  {{> burgers/burger-block devoured=true}}
              {{/unless}}
          {{/each}}
      </ul>
    </div>

    <div class="col">
      <h2>Devoured Burgers</h2>
      {{!-- {{Finds all entries in burgers table and adds to them to this list if they have been devoured}} --}}
      <ul class="notDevouredList">
          {{#each burgers }}
              {{#if devoured}}
                  {{> burgers/burger-block devoured=false}}
              {{/if}}
          {{/each}}
      </ul>
    </div>
  </div>
</div>
</div>

</body>